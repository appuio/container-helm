{
  "extends": [
    "config:base",
    ":assignAndReview(mhutter)",
    ":automergePatch"
  ],
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchFileNames": [
        "Dockerfile"
      ],
      "matchDepNames": [
        "helm/helm"
      ],
      "allowedVersions": "<4"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^Dockerfile.*"
      ],
      "matchStrings": [
        "renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\sENV .*_VERSION=(?<currentValue>.*)\\s"
      ]
    }
  ]
}
